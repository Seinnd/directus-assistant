{
	"name": "directus-extension-assistant",
	"version": "0.0.3",
	"type": "module",
	"description": "A powerful Directus extension leveraging GPT-4 AI to simplify CMS management and automate complex tasks with intuitive AI commands.",
	"icon": "extension",
	"files": [
		"dist/",
		"README.md",
		"screenshots"
	],
	"directus:extension": {
		"host": "^10.2.0",
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "module",
				"name": "assistant-module",
				"source": "src/assistant-module/index.ts"
			},
			{
				"type": "endpoint",
				"name": "assistant-endpoint",
				"source": "src/assistant-endpoint/index.ts"
			}
		]
	},
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-bundle",
		"gpt-4",
		"openai",
		"cms-automation",
		"ai-assistant"
	],
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"add": "directus-extension add"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "10.2.0",
		"@directus/types": "^11.0.2",
		"@types/json-schema": "^7.0.15",
		"@types/node": "^20.10.4",
		"knex": "^2.4.2",
		"pino": "^8.14.1",
		"typescript": "^5.3.3",
		"vue": "^3.3.11"
	},
	"dependencies": {
		"json-schema": "^0.4.0",
		"marked": "^11.0.1",
		"openai": "^4.20.1"
	}
}